{
  "name": "job-tracker-app",
  "version": "1.0.0",
  "description": "Job tracker application with separated frontend and backend",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "server": "bash scripts/start-server.sh",
    "start": "react-scripts start",
    "build": "npm run build-css && react-scripts build",
    "build-css": "tailwindcss -i ./src/index.css -o ./src/tailwind-output.css",
    "watch-css": "tailwindcss -i ./src/index.css -o ./src/tailwind-output.css --watch",
    "test": "react-scripts test"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "googleapis": "^169.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.19"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
